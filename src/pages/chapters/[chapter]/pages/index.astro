---
import i18next, { changeLanguage } from "i18next"
import { Image } from "astro:assets"
import SecondaryLayout from "@web/layouts/SecondaryLayout.astro"
import Section from "@web/components/page-secondary/SecondaryPageSection.astro"
import getLocalizedLinkToComicStrip from "@server/actions/GetLocalizedLinkToComicStrip"
import getAllPagesOfChapter from "@server/actions/GetAllPagesOfChapter"
import getLocalizedChapter from "@server/localization/GetLocalizedChapter"
import getLocalizedPage from "@server/localization/GetLocalizedPage"

changeLanguage("es")

export async function getStaticPaths() {
	return await getAllPagesOfChapter({ language: i18next.language })
}
const { chapter, pages } = Astro.props as Awaited<ReturnType<typeof getAllPagesOfChapter>>[0]["props"]
const chapter_localized = getLocalizedChapter(chapter)
---
<SecondaryLayout title={chapter_localized}>
	<Section>
		<ol>
			{
				pages.map(({ image, number }) => (
					<li>
						<a href={getLocalizedLinkToComicStrip({ chapter, page: number })}>
							<Image src={image} alt="" width={282} height={399} />
							<span>{getLocalizedPage(number)}</span>
						</a>
					</li>
				))
			}
		</ol>
	</Section>
</SecondaryLayout>
<style>
    a {
        position: relative;
        display: flex;
        flex-direction: column;
        isolation: isolate;
        transition: transform 200ms;
    }

    ol:has(a:hover) a:not(:hover) {
        transform: scale(0.95);
    }

    a:hover {
        transform: scale(1.05);
    }

    ol {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(12rem, 1fr));
        gap: 1.5rem;
        margin-bottom: 0.5rem;
    }

    img {
        width: 100%;
        height: auto;
        aspect-ratio: var(--strip-aspect-ratio);

        margin-bottom: 1.25rem;

        border-radius: var(--border-radius);
    }

    span {
        color: var(--color-muted);
        font-size: .875rem;
        user-select: none;
    }
</style>
