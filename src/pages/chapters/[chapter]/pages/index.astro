---
import i18next, { changeLanguage, t } from "i18next";
import { localizePath } from "astro-i18next";
import { Image } from "astro:assets";
import SecondaryLayout from "@web/layouts/SecondaryLayout.astro";
import Section from "@web/components/page-secondary/SecondaryPageSection.astro";
import SectionHeading from "@web/components/general/SectionHeading.astro";
import getLocalizedLinkToComicStrip from "@server/actions/GetLocalizedLinkToComicStrip";
import getAllPagesOfChapter from "@server/actions/GetAllPagesOfChapter";
import getLocalizedChapter from "@server/localization/GetLocalizedChapter";
import getLocalizedPage from "@server/localization/GetLocalizedPage";

changeLanguage("es");

export async function getStaticPaths() {
    return await getAllPagesOfChapter({ language: i18next.language });
}
const { chapter, pages } = Astro.props as Awaited<ReturnType<typeof getAllPagesOfChapter>>[0]["props"];
const chapter_localized = getLocalizedChapter(chapter);
---
<SecondaryLayout title={chapter_localized}>
	<Section>
		<a class="back" href={localizePath("/chapters")}>{`<- ${t("secondary-nav.back")}`}</a>
		<SectionHeading>{chapter_localized}</SectionHeading>
		<ol>
			{
				pages.map(({ image, number }) => (
					<li>
						<a class="image-link" href={getLocalizedLinkToComicStrip({ chapter, page: number })}>
							<Image src={image} alt="" width={282} height={399} />
							<span>{getLocalizedPage(number)}</span>
						</a>
					</li>
				))
			}
		</ol>
	</Section>
</SecondaryLayout>
<style>
    .image-link {
        position: relative;
        display: flex;
        flex-direction: column;
        isolation: isolate;
        transition: transform 200ms;
    }

    ol:has(.image-link:hover) .image-link:not(:hover) {
        transform: scale(0.95);
    }

    .image-link:hover {
        transform: scale(1.05);
    }

    ol {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(12rem, 1fr));
        gap: 1.5rem;
        margin-bottom: 0.5rem;
    }

    img {
        width: 100%;
        height: auto;
        aspect-ratio: var(--strip-aspect-ratio);
        border-radius: var(--border-radius);
    }

    span {
    		margin-top: 0.5rem;
        color: var(--color-text-aside);
        font-size: .875rem;
        user-select: none;
        text-align: center;
    }

    .back {
    	display: inline-block;
    	margin-bottom: 1rem;
			color: var(--color-text-aside);
			transition: transform 300ms;
    }

    .back:hover {
    	transform: scale(1.1);
    }
</style>
