<style is:inline>
		:root {
    		--color--white: #FFFFFF;
				--color--blue: #273D5F;
				--color--orange: #FD854C;
				--color--black: #000000;
				--color--yellow: #F0BE5F;
				--color--dark-orange: #E94E1B;

        --section_background-color: var(--color--white);
        --navigation_background-color: var(--color--blue);
        --decoration_background-color: var(--color--blue);

        --link_color: var(--color--yellow);
        --heading_color: var(--color--dark-orange);
        --link--hover_color: var(--color--orange);
        
        --button_background-color: var(--color--yellow);
        --button--hover_background-color: var(--color--orange);
				
        --header__link--selected_color: var(--color--orange);
        --header__link--hover_background-color: color-mix(in srgb, var(--color--orange) 20%, var(--color--blue));

        --background-header: radial-gradient(119.72% 309.84% at 50% 143.65%, #EA8867 8.37%, #7B5B8E 46.88%);
        --background-main: linear-gradient(180deg, #CC7659 10.66%, #7589A1 33%, #764A91 100%);

        --buttons_gap: 0.5rem;

        --border-radius: 5px;
        --border-wide-width: 3px;
        --border-color: var(--color--black);
        --border-wide: var(--border-wide-width) solid var(--border-color);

        --color-muted: #808080;
        --color-disabled: #B1A3A3;

        --color-text-navigation: #FFFFFF;
        --color-text-aside: #373737;
        --color-button-border: #432918;

        --filter-image-hover: saturate(20);

        --font-family-title: "Germania One", sans-serif;
        --font-family-text: Inter, Arial;

        --main-desktop-width: 54rem;
        --strip-width: calc(var(--main-desktop-width) + var(--border-wide-width) * 2);
        --strip-aspect-ratio: 940 / 1330;

        --link--hover_transition-timing: .2s cubic-bezier(.3, 0, .5, 1);
    }

    body {
        font-family: var(--font-family-text);
        line-height: 1.4;
    }

    .semantic-only {
        position: absolute;
        color: transparent;
        z-index: -1;
        top: 1rem;
        left: 0;
        right: 0;
        margin: auto;
    }
</style>
