<style is:inline>
		:root {
				--color--yellow: #F0BE5F;
				--color--orange: #FD854C;
				--color--dark-orange: #E94E1B;
				--color--dark-brown: #432918;
				--color--blue: #273D5F;
    		--color--white: #FFFFFF;
    		--color--light-grey: #B1A3A3;
    		--color--grey: #808080;
    		--color--dark-grey: #767676;
				--color--black: #373737;
				--color--dark-black: #000000;

        --section_background-color: var(--color--white);
        --navigation_background-color: var(--color--blue);
        --decoration_background-color: var(--color--blue);

        --link_color: var(--color--yellow);
        --link--hover_color: var(--color--orange);

        --heading_color: var(--color--dark-orange);
        
        --button_background-color: var(--color--yellow);
        --button--hover_background-color: var(--color--orange);
        --button_border-color: var(--color--dark-brown);
				
        --header__link--selected_color: var(--color--orange);
        --header__link--hover_background-color: color-mix(in srgb, var(--color--orange) 20%, var(--color--blue));

        --buttons_gap: 0.5rem;

        --component_border-radius: 5px;
        --border-color: var(--color--dark-black);
        --border-wide-width: 3px;
        --border-wide: var(--border-wide-width) solid var(--border-color);

        --text--muted_color: var(--color--grey);

        --input--placeholder_color: var(--color--dark-grey);
        
        --sticky-navbar__link--disabled_color: var(--color--light-grey);
        --sticky-navbar__text_color: var(--color--white);
        
        --aside__text_color: var(--color--black);

        --content--desktop_width: 54rem;
        --strip_width: calc(var(--content--desktop_width) + var(--border-wide-width) * 2);
        --strip_aspect-ratio: 940 / 1330;


        --heading_font-family: "Germania One", sans-serif;
        --text_font-family: Inter, Arial;

				/* TODO fix these */
        --link--hover_transition-timing: .2s cubic-bezier(.3, 0, .5, 1);
        --filter-image-hover: saturate(20);
    }

    body {
        font-family: var(--text_font-family);
        line-height: 1.5;
    }

    h1, h2, h3, h4, h5, h6 {
        line-height: 1.2;
    }

    p:not(:last-child) {
        margin-bottom: 0.5rem;
    }

    .semantic-only {
        position: absolute;
        color: transparent;
        z-index: -1;
        top: 1rem;
        left: 0;
        right: 0;
        margin: auto;
    }
</style>
