---
export interface Props {
	title: string
}

const { title } = Astro.props
---
<span>
    {title}
</span>
<style>
    span {
        display: none;
    }

    @media (width <= 72em) {
        span {
            display: flex;
            align-items: center;
            padding: .75rem 1.75rem;
            font-size: 1.5rem;
            font-family: var(--heading_font-family);
            color: var(--header__link--selected_color);
        }
    }
</style>