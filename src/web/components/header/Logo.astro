---
import Icon from "@web/components/general/Icon.astro"
import getHeader from "@server/actions/GetHeader"
import { getLangFromUrl } from "@server/i18n/utils"

const language = getLangFromUrl(Astro.url)
const header = await getHeader({ language })
---
<a href="/" aria-label="Degaussing Logo">
	<Icon src={header.logo} />
</a>
<style>
    a {
        display: flex;
        height: 150px;
        aspect-ratio: 580 / 150;
    }

    @media (width <= 72em) {
        a {
            height: 100%;
        }
    }
</style>
