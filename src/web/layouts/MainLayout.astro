---
import Header from "@web/components/header/Header.astro"
import ResetCss from "@web/styles/ResetCss.astro"
import FontsCss from "@web/styles/FontsCss.astro"
import ImagesPrefetch from "@web/performance/ImagesPreload.astro"
import VariablesCss from "@web/styles/VariablesCss.astro"
//TODO import { HeadHrefLangs } from "astro-i18next/components" <HeadHrefLangs />
import getIsHomepage from "@server/GetIsHomepage"
import { getLangFromUrl, useTranslations } from "@server/i18n/utils"
import type { RelatedPages } from "@server/Utils"

const language = getLangFromUrl(Astro.url)
const t = useTranslations(language)

export interface Props {
	info?: RelatedPages
	title: string
}
const { info, title } = Astro.props

const isHomepage = getIsHomepage({ path: Astro.url.pathname, language })
---
<!DOCTYPE html>
<html lang={language}>
<head>
	<title>{title}</title>
	<link rel="icon" href="/favicon.ico" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	{isHomepage &&
		<meta name="description" content={t("seo.description")} />}
	<FontsCss />
	<ImagesPrefetch />
	<ResetCss />
	<VariablesCss />
</head>
<body tabindex="-1">
<Header info={info} />
<div id="content-container">
	<slot />
</div>
<script data-goatcounter="https://jemzart.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
<noscript><img src="https://jemzart.goatcounter.com/count?p=/test-noscript" alt=""></noscript>
</body>
</html>

<style>
    :root {
        scroll-padding-top: 1.25rem;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    #content-container {
        flex-grow: 1;

        position: relative;

        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.5rem 1.25rem;

        background-repeat: repeat;
        background-size: contain;
        /* background-image: url("/images/background_body.webp"); */
    }

    #content-container::before {
        content: "";
        position: absolute;
        top: 0;
        width: 100%;
        height: 100%;
        background: var(--background-main);
        z-index: -1;
    }

    @media (max-width: 72em) {
        #content-container {
            padding: 1rem;
        }
    }
</style>
