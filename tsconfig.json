{
  "extends": "astro/tsconfigs/strictest",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@web/*": [
        "src/web/*"
      ],
      "@server/*": [
        "src/server/*"
      ],
      "@transport/*": [
        "src/transport/*"
      ]
    }
  }
}
